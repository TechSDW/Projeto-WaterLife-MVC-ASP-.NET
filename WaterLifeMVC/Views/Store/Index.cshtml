@{
    ViewData["Title"] = "Store";
}

<html>
    <head>
        <link rel="stylesheet" href="/css/store.css">
    </head>

    <body>
        <header>
            <h1>Confira os melhores produtos do mercado!</h1>
        </header>

        <main>
            <aside>
                <h1>Filtros</h1>

                <div class="filter-volume">
                    <h2>Volume:</h2>

                    <div>
                        <input type="checkbox">

                        <p>0mL - 500mL</p>
                    </div>

                    <div>
                        <input type="checkbox">

                        <p>500mL - 1000mL</p>
                    </div>

                    <div>
                        <input type="checkbox">

                        <p>1000mL - 5000mL</p>
                    </div>

                    <div>
                        <input type="checkbox">

                        <p>5000mL+</p>
                    </div>
                </div>

                <div class="filter-price">
                    <h2>Preço:</h2>

                    <div>
                        <input type="checkbox">

                        <p>R$0,00 - R$20,00</p>
                    </div>

                    <div>
                        <input type="checkbox">

                        <p>R$20,00 - R$100,00</p>
                    </div>

                    <div>
                        <input type="checkbox">

                        <p>R$100,00 - R$300,00</p>
                    </div>

                    <div>
                        <input type="checkbox">

                        <p>R$300,00+</p>
                    </div>
                </div>
            </aside>

            <section>
                <div class="prod-item">
                    <img src="~/img/Product Images/MoleculaAgua.jpg" alt="Molécula de água" class="prod-img">

                    <div class="prod-item-info">
                        <h1>Átomo de água</h1>

                        <p>Quantidade em estoque: 51</p>

                        <div class="prod-details-prices">
                            <h2>Preço: R$63,22</h2>

                            <button id="btn-addcart">Adicionar ao carrinho</button>
                        </div>
                    </div>
                </div>

                <div class="prod-item">
                    <img src="~/img/Product Images/MoleculaAgua.jpg" alt="Molécula de água" class="prod-img">

                    <div class="prod-item-info">
                        <h1>Átomo de água</h1>

                        <p>Quantidade em estoque: 51</p>

                        <div class="prod-details-prices">
                            <h2>Preço: R$63,22</h2>

                            <button id="btn-addcart">Adicionar ao carrinho</button>
                        </div>
                    </div>
                </div>
            </section>
        </main>

        <script src="~/js/script.js"></script>
    </body>
</html>