<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - WaterLifeMVC</title>
        <link href="~/css/globals.css" rel="stylesheet" />
    </head>

    <body>
        <nav>
            <img src="~/img/logo.png" alt="logo">

            <div class="btn-nav">
                <a asp-controller="Home" asp-action="Index"><img src="~/img/Icons/home.png" alt="home"></a>
                <a asp-controller="Store" asp-action="Index"><img src="~/img/Icons/store.png" alt="store"></a>
                <a asp-controller="Shopcart" asp-action="Index"><img src="~/img/Icons/shop-cart.png" alt="shopping cart"></a>
                <a asp-controller="Profile" asp-action="Index"><img src="~/img/Icons/user.png" alt="user"></a>
            </div>
        </nav>

        <div class="container">
            <div role="main" class="pb-3">
                @RenderBody()
            </div>
        </div>

        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>